@model IEnumerable<Brodheim.Models.Passos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePasso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoPasso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.ImagePasso" alt="Slider Image" class="img-fluid" style="max-width: 200px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoPasso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
